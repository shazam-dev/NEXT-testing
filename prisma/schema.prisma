generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id          Int         @id @default(autoincrement())
  email       String      @unique
  name        String?
  password    String
  score       Int         @default(0)
  createdAt   DateTime  @default(now())
  discounts   Discounts[]
}

model Discounts {
  id            Int       @id @default(autoincrement())
  title         String
  description   String?
  cost          String
  sale          String
  cat           String
  address       String
  latitude      String
  longitude     String
  image         String
  deadLine      DateTime
  createdAt     DateTime  @default(now())
  author        Users     @relation(fields: [authorId], references: [id])
  authorId      Int
}

